          a.dropdown-item(id='cat1.3' href='#') Subcategor&iacute;a 3
      li.dropdown.dropdown-submenu
        a(classname='dropdown-toggle' href='/' id='categoría2' role='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')  Categor&iacute;a 2 
        div(classname='dropdown-menu' aria-labelledby='navbarDropdown')
          a.dropdown-item(id='cat2.1' href='#') Subcategor&iacute;a 1
          a.dropdown-item(id='cat2.2' href='#') Subcategor&iacute;a 2
      li.dropdown.dropdown-submenu
        a(classname='dropdown-toggle' href='/' id='categoría3' role='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')  Categor&iacute;a 3 
        div(classname='dropdown-menu' aria-labelledby='navbarDropdown')
          a.dropdown-item(id='cat3.1' href='#') Subcategor&iacute;a 1
          a.dropdown-item(id='cat3.2' href='#') Subcategor&iacute;a 2
      li.dropdown.dropdown-submenu
        a(classname='dropdown-toggle' href='/' id='categoría 4' role='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')  Categor&iacute;a 4 
        div(classname='dropdown-menu' aria-labelledby='navbarDropdown')
          a.dropdown-item(id='cat4.1' href='#') Subcategor&iacute;a 1
  form.form-inline.my-2.my-lg-0
    input.form-control.mr-sm-2(type='search' placeholder='Buscar' aria-label='Buscar')
