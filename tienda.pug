.container
  .row
    // Elementos generados a partir del JSON
    main#items.col-sm-8.row  
    // Carrito
    aside.col-sm-4
      center
        i.fa.fa-shopping-cart.fa-5x(style='color:#fbd300;')
      // Elementos del carrito
      ul#carrito.list-group
      hr
      // Precio total
      p.text-right
        | Total:&amp;dollar; 
        span#total
      button#boton-vaciar.btn.btn-warning Vaciar
      button#boton-pagar.btn.btn-warning Pagar
